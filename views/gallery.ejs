<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Gallery</title>
  <link href="/styles.css" rel="stylesheet" type="text/css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/css/materialize.min.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/js/materialize.min.js" defer></script>
</head>
<body>

  <div class="row header valign-wrapper center-align">
    <img id="profile-pic" class="circle responsive-img col s12 m3 l3" src="<%= user.profile_pic %>">
    <h1 id="user-name" class="col s12 m3 l3"><%= user.first_name %> <%= user.last_name %></h1>
    <div class="col s12 m3 l3 bio">
      <p class="flow-text">Specialty: <%= user.media_type %><br>Bio: <%= user.bio %></p>
    </div>
    <a class="col s12 m3 l3 flow-text" id="resume_button" href="/resume/<%= user.id %>">My Resume</a>
  </div>

  <div class="container">

    <% if(user.status == "user"){ %>
      <style media="screen">
        #resume_button {
          display:block;
        }
      </style>
    <% } else if(user.status == "employer") { %>
      <style media="screen">
        #resume_button {
          display: block;
        }
       </style>
     <% } else { %>
       <style media="screen">
         #resume_button {
           display: none;
         }
       </style>
     <% } %>

    <div id="gallery" class="row">
      <% for(let i=0; i<projects.length; i++) { %>
      <div class="project col s6">
        <p id="project_title" class="flow-text"><%= projects[i].title %></p><br>
        <% for(let j=0; j<projects[i].images.length; j++) { %>
         <img class="hoverable responsive-img" src="<%= projects[i].images[j].img_url %>" style="width: 200px">
        <% } %><br>
        <p class="truncate random"><%= projects[i].project_description %></p><br>
        <a class="btn-floating" href="">View more...</a>
      </div>
      <% } %>
    </div>
  <% if(loggedUser.status == "user"){ %>
    <style media="screen">
      #resume_button {
        display:block;
      }
    </style>
  <% } else if(loggedUser.status == "employer") { %>
    <style media="screen">
      #resume_button {
        display: block;
      }
     </style>
   <% } else if(!loggedUser) { %>
     <style media="screen">
       #resume_button {
         display: none;
       }
     </style>
   <% } %>

  <div id="gallery">
    <% for(let i=0; i<projects.length; i++) { %>
    <div class="project">
      <%= projects[i].title %><br>
      <% for(let j=0; j<projects[i].images.length; j++) { %>
       <img src="<%= projects[i].images[j].img_url %>" style="width: 200px">
      <% } %><br>
      <%= projects[i].project_description %><br>
      <a href="">View more...</a>

    </div><br>
    <% } %>
  </div>

  <form id="add_project" action="/addproject/<%= user.id %>">
       <button type="submit">Add Project</button>
  </form>

  <% if (loggedUser.status == "user") { %>
 <style media="screen">
   #add_project {
     display: block;
   }
 </style>

  <% } else if(loggedUser.status == "employer"){ %>
    <style media="screen">
      #add_project {
        display: none;
      }
    </style>
  <% } %>

</body>
</html>
